{
  "name": "chat-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "samples/chat-app/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "compiler": "babel",
        "outputPath": "dist/apps/chat-app",
        "index": "samples/chat-app/src/index.html",
        "baseHref": "/",
        "main": "samples/chat-app/src/main.tsx",
        "tsConfig": "samples/chat-app/tsconfig.app.json",
        "assets": [
          "samples/chat-app/src/favicon.ico", 
          "samples/chat-app/src/assets",
          {
            "glob": "api.conf",
            "input": "samples/chat-app",
            "output": "./"
          }
        ],
        "styles": ["samples/chat-app/src/styles.scss"],
        "scripts": [],
        "webpackConfig": "samples/chat-app/webpack.config.js"
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        },
        "production": {
          "fileReplacements": [],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "serve": {
      "executor": "@nx/webpack:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "chat-app:build",
        "hmr": true,
        "proxyConfig": "samples/chat-app/proxy.conf.json"
      },
      "configurations": {
        "development": {
          "buildTarget": "chat-app:build:development"
        },
        "production": {
          "buildTarget": "chat-app:build:production",
          "hmr": false
        }
      },
      "dependsOn": ["chat-service:serve"]
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "chat-app:build",
        "spa": true
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "samples/chat-app/jest.config.ts"
      }
    }
  }
}
