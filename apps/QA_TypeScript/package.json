{
  "name": "qa_typescript",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "cypress-cucumber-preprocessor": {
    "commonPath": "common",
    "nonGlobalStepDefinitions": true,
    "cucumberJson": {
      "generate": true,
      "outputFolder": "cypress/cucumber-json",
      "filePrefix": "",
      "fileSuffix": ".cucumber"
    }
  },
  "scripts": {
    "test": "cypress run --spec \"**/*.feature\"",
    "test:accessibility": "./node_modules/.bin/cypress-tags run -e TAGS=\"@accessibility\"",
    "cypressOpen": "./node_modules/.bin/cypress open",
    "cypressRun": "node_modules\\.bin\\cypress run",
    "headTest": "npm run cypressRun -- --headed",
    "chromeTest": "npm run cypressRun -- --browser chrome",
    "edgeTest": "npm run cypressRun -- --browser edge",
    "firefoxTest": "npm run cypressRun -- --browser firefox",
    "regressionTestChrome": "npm run chromeTest -- --spec \"cypress/integration/Regression/*\"",
    "regressionTestEdge": "npm run edgeTest -- --spec \"cypress/integration/Regression/*\"",
    "regressionTestFirefox": "npm run firefoxTest -- --spec \"cypress/integration/Regression/*\"",
    "regressionTest": "npm run cypressRun -- --spec \"cypress/integration/Regression/*\"",
    "jenkinsTest": "npm run cypressRun -- --spec \"cypress/integration/Jenkins_Job/*\"",
    "ci:smokeTest": "npm run chromeTest -- --headless --spec \"cypress/integration/smoke-test/*\"",
    "ci:endToEnd": "npm run chromeTest -- --headless --spec \"cypress/integration/end-to-end/*\"",
    "ci:currentSprint": "npm run chromeTest -- --headless --spec \"cypress/integration/current-sprint/*\"",
    "ci:regression": "npm run chromeTest -- --headless --spec \"cypress/integration/regression/*\""
  },
  "author": "samKothari",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^6.1.0",
    "cypress-cucumber-preprocessor": "^4.0.0",
    "tsify": "^5.0.2",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@types/node": "^14.14.12"
  }
}
